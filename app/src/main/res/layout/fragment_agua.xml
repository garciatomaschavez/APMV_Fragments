<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAgua"
    android:background="@color/aguaClaro"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="30dp"

            android:text="@string/hola_soy_el_fragment_agua"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/aguaOscuro"
            />

        <ImageView
            android:id="@+id/imageAgua"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:src="@drawable/water"
            />

        <TextView
            android:id="@+id/anteriorElemento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:text="@string/vengo_del_elemento_n"
            android:textSize="30sp"
            android:textColor="@color/aguaOscuro"
            android:textStyle="bold"
            />


        <EditText
            android:id="@+id/inputMensaje"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/este_mensaje_aparecer_en_aire"

            android:background="@color/aguaOscuro"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            />
        <TextView
            android:id="@+id/mensaje"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/sin_mensaje"
            android:textSize="20sp"
            android:textColor="@color/aguaOscuro"
            android:textStyle="bold"
            android:textAlignment="center"
            />

    </LinearLayout>

    <Button
        android:id="@+id/returnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:text="@string/volver"
        android:textSize="40sp"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        android:backgroundTint="@color/aguaOscuro"
        />

</FrameLayout>

